{
  "name": "nextjs-messaging-app",
  "version": "1.0.0",
  "description": "Next.js messaging and notification app with MongoDB and WebSockets",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run socket-server\" \"npm run client\"",
    "socket-server": "nodemon server.js",
    "client": "next dev",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "typescript": "^5.2.0"
  },
  "keywords": [
    "nextjs",
